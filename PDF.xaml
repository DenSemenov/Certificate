        Title="Программа сертификации" Height="1000" Width="1100" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="PrintButton" Content="Печать" HorizontalAlignment="Left" Margin="27,26,0,0" VerticalAlignment="Top" Width="106" FontSize="24" Click="Button_Click"/>
        <Button Content="PDF" x:Name="pdfButton" HorizontalAlignment="Left" Margin="151,26,0,0" VerticalAlignment="Top" Width="106" FontSize="24" Click="pdfButton_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="687" Margin="54,87,0,0" VerticalAlignment="Top" Width="1004" Source="sertificate.jpg"/>

    </Grid>
</Window>
