        <Button Content="Вернуться назад" Margin="0,0,26,20" FontSize="16" HorizontalAlignment="Right" Width="223" Height="38" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Label Content="Регистрация пользователя" HorizontalAlignment="Center" Margin="248,276,170,595" VerticalAlignment="Center" FontSize="48" Height="99" Width="674"/>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="337,381,661,527" VerticalAlignment="Center" FontSize="20" Height="64" Width="96"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="324,449,661,466" VerticalAlignment="Center" FontSize="20" Height="57" Width="109"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Center" Margin="223,511,661,403" VerticalAlignment="Center" FontSize="20" Height="58" Width="210"/>
        <Label Content="Имя" HorizontalAlignment="Center" Margin="354,577,661,337" VerticalAlignment="Center" FontSize="20" Height="58" Width="79"/>
        <Label Content="Фамилия" HorizontalAlignment="Center" Margin="312,641,661,277" VerticalAlignment="Center" FontSize="20" Width="121" Height="54"/>
