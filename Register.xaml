        <Button x:Name="ReadyButton" Content="Готово" HorizontalAlignment="Left" Margin="438,700,0,0" VerticalAlignment="Top" Width="117" FontSize="20" Click="ReadyButton_Click"/>
        <Button x:Name="ClearButton" Content="Очистить" HorizontalAlignment="Left" Margin="584,700,0,0" VerticalAlignment="Top" Width="116" FontSize="20" Click="ClearButton_Click"/>


    </Grid>
</Window>
